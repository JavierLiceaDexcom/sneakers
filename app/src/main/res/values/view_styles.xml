<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ClickableLayout">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="ClickableImageView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/rounded_ripple_effect</item>
    </style>

    <style name="SelectableCardView" parent="Widget.Material3.CardView.Outlined">
        <item name="android:focusable">true</item>
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextFieldStyle" parent="Widget.Material3.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeColor">@color/primaryDark</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/primaryDark</item>
        <item name="navigationIconTint">@color/primaryDark</item>
        <item name="titleCentered">true</item>
        <item name="titleTextAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="ToolbarStyleBack" parent="ToolbarStyle">
        <item name="navigationIcon">@drawable/ic_back</item>
    </style>

    <style name="InputStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_search</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">@color/gray_darker</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="SearchInputStyle" parent="InputStyle">
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:hint">@string/text_search</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
    </style>

    <style name="FilledCardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="ChipCheckedStyle" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/surface</item>
        <item name="chipCornerRadius">12dp</item>
        <item name="chipIcon">@drawable/ic_check</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:textColor">@color/primaryDark</item>
        <item name="chipIconTint">@color/primaryDark</item>
    </style>

    <style name="ChipCheckableStyle" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/surface</item>
        <item name="chipCornerRadius">12dp</item>
        <item name="chipIcon">@drawable/ic_check</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:textColor">@color/primaryDark</item>
        <item name="chipIconTint">@color/primaryDark</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
</resources>