<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ClickableLayout">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="ClickableImageView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/rounded_ripple_effect</item>
    </style>

    <style name="SelectableCardView" parent="Widget.Material3.CardView.Outlined">
        <item name="android:focusable">true</item>
        <item name="android:checkable">false</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextFieldStyle" parent="Widget.Material3.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeColor">@color/primaryDark</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">12dp</item>
    </style>
</resources>